@model GameZone.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<form asp-action="PlaceOrder" method="post">
    <div class="mb-3">
        <label asp-for="ShippingAddress" class="form-label">Shipping Address</label>
        <input asp-for="ShippingAddress" class="form-control" />
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-success">Place Order</button>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to Cart</a>
</div>


